<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.idexx.labstation.rapidcaptureapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LauncherActivity"
            android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppThemeNoBar"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
        <activity
            android:name=".UpdateUserActivity"
            android:theme="@style/AppThemeNoBar">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label=""
            android:theme="@style/AppThemeNoBar">
        </activity>
        <activity android:name=".CreateStudyActivity">
        </activity>
        <activity
            android:name=".ClinicDetailsActivity"
            android:theme="@style/AppThemeNoBar">
        </activity>
        <activity
            android:name=".ServerConfigActivity"
            android:theme="@style/AppThemeNoBar">
        </activity>
        <activity android:name=".UserSettingsActivity">
        </activity>
    </application>

</manifest>